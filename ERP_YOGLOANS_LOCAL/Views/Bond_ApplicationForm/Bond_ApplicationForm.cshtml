                margin-bottom: 5px; /* Adjust the bottom margin of the <h4> to reduce space */
            }

            .application-title p {
                margin-top: 0; /* Remove or reduce the top margin of the <p> */
                padding-top: 0; /* Remove any padding at the top of <p> */
            }




        /* Bordered box for image */
        .bordered-box {
            width: 90px;
            height: 90px;
            border: 1px solid #000;
            padding: 5px;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 6px;
            box-sizing: border-box;
        }

        /* Image styling */
        .applicant-photo {
            max-width: 100%;
            max-height: 100%;
            object-fit: cover;
            border-radius: 4px;
        }

        /* Applicant message section */
        .applicant-message {
            margin: 15px 0;
            font-size: 10px;
            text-align: left;
            margin-bottom: 5px;
        }

