    function fillGrid(data) {
        var tableBody = $('#tbl_bank_details tbody');
        tableBody.empty(); // Clear any existing rows

        // Create a new row with the data
        var tr = $('<tr>');
        $.each(data, function (key, value) {

                tr.append($('<td>').text(value)); // Create a table cell for each column

        });
        tableBody.append(tr); // Append the single row to the table body
    }


    function fillPaymodeDropdown() {
        $.ajax({
            url: "@Url.Action("FillDropdown", "Personal_loan")",
            type: 'POST',

            success: function (response) {
                if (response.success) {
                    // Get the dropdown element
                    var dropdown = $('#ddl_paymode');

                    // Clear any existing options
                    dropdown.empty();

                    // Loop through the data and append options to the dropdown
                    $.each(response.data, function (index, item) {
                        dropdown.append($('<option>', {
                            value: item.Value,
                            text: item.Text
                        }));
                    });
                } else {
                    alert('Error: ' + response.message);
                }


            },
            error: function (error) {
                alert("error");
                console.error('Error sending data:', error);
            }
        });
    }




