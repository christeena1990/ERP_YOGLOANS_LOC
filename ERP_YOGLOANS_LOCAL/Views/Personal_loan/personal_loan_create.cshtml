    function validateLoanAmount() {
        var loanAmount = parseInt(document.getElementById('loan_amt').value, 10);
        var maxAmount = parseInt(document.getElementById('max-amount').value, 10);
        var minAmount = parseInt(document.getElementById('min-amount').value, 10);

