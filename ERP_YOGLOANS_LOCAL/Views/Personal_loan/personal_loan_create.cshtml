        if (loanAmount < minAmount || loanAmount > maxAmount) {
            alert("The loan amount must be between " + minAmount + " and " + maxAmount + ".");
            document.getElementById('loan_amt').style.borderColor = 'red'; // Add red border for invalid input
            document.getElementById('loan_amt').value = "";
            document.getElementById('loan_amt').focus();
        } else {
            document.getElementById('loan_amt').style.borderColor = ''; // Remove border if valid
