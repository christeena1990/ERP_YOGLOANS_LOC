    $(document).ready(function () {       

        // Use event delegation to handle dynamically loaded elements
        $(document).on('change', '.checkbox-option', function () {
            //alert("checked");
            if ($(this).is(':checked')) {
                $('.checkbox-option').not(this).prop('checked', false);

                var loanNo = $(this).data('customer-id');
                var hiddenInputId = 'customer_id_' + loanNo; // Construct the full id
                var customer_id = document.getElementById(hiddenInputId).value;

                localStorage.setItem('checkedLoanNo', loanNo);
                localStorage.setItem('customer_id', customer_id);
                localStorage.setItem('loan_no', loanNo);

                var hiddenInputId = 'pl-status-' + loanNo;
                var plStatus = $('#' + hiddenInputId).val();
                plStatus = parseInt(plStatus, 10);

                if (plStatus === 0) {
                    if ($(this).is(':checked')) {
                        goToStep1();
                        firstLevel();
                    }
                } else if (plStatus === 1) {
                    if ($(this).is(':checked')) {
                        goToStep2();
                        SecondLevel();
                    }
                } else if (plStatus === 5) {
                    if ($(this).is(':checked')) {
                        goToStep3();
                    }
                }
            } else {
                location.reload();
            }
        });
    });

    function reloadCustomerDetails() {
    $.ajax({
        url: '/Personal_loan/GetCustomerDetailsJson', // Replace 'YourController' with the actual controller name
        type: 'GET',
        success: function (data) {
            let htmlContent = ''; // Variable to hold the dynamically generated HTML

            // Iterate through each customer and generate the HTML content
            $.each(data, function (index, item) {
                let plStatus = '';
                if (item.PlStatus == 0) { plStatus = '1st'; }
                if (item.PlStatus == 1) { plStatus = '2nd'; }
                if (item.PlStatus == 5) { plStatus = '3rd'; }

                // Construct HTML for each customer
                htmlContent += `
                    <li class="list-group-item">
                        <div class="todo-indicator bg-primary"></div>
                        <div class="widget-content p-0">
                            <div class="widget-content-wrapper">
                                <div class="widget-content-left mr-2">
                                    <div class="custom-checkbox custom-control">
                                        <input type="checkbox" name="option" class="custom-control-input checkbox-option" data-customer-id="${item.LoanNo}" id="checkbox-${item.LoanNo}">
                                        <label class="custom-control-label" for="checkbox-${item.LoanNo}">&nbsp;</label>
                                    </div>
                                </div>
                                <div class="widget-content-left">
                                    <div class="widget-heading" style="font-size:small">
                                        ${item.CustomerName}
                                        <div class="badge badge-danger ml-1">${plStatus}</div>
                                        <input type="hidden" class="pl-status-hidden" id="pl-status-${item.LoanNo}" value="${item.PlStatus}" />
                                    </div>
                                    <div class="widget-subheading" style="font-size:small">
                                        <i>${item.LoanNo}</i>
                                    </div>
                                    <input type="hidden" value="${item.CustomerId}" id="customer_id_${item.LoanNo}" />
                                </div>
                            </div>
                        </div>
                    </li>`;
            });

            // Update the div with the new content
            $('.scrollable-container ul').html(htmlContent);

            // After reloading content, check if there was a previously checked checkbox
            var checkedLoanNo = localStorage.getItem('checkedLoanNo');
            if (checkedLoanNo) {
                $('#checkbox-' + checkedLoanNo).prop('checked', true);
            }
        },
        error: function (xhr, status, error) {
            console.error("Error while reloading customer details: " + error);
        }
    });
}



