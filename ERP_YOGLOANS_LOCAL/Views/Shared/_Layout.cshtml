   @*///////////////////////////////  for restrict multiple tab access//////////////////////////////////////*@

    <script>
        (function () {
            const SESSION_KEY = 'user_session_status';
            const SESSION_LOGGED_IN = 'loggedIn';
            const SESSION_LOGGED_OUT = 'loggedOut';

            function setSessionStatus(status) {
                localStorage.setItem(SESSION_KEY, status);
            }

            function getSessionStatus() {
                return localStorage.getItem(SESSION_KEY);
            }

            function handleTabOpen() {
                if (getSessionStatus() === SESSION_LOGGED_IN) {
                    alert('You cannot open the application in multiple tabs.');
                    window.location.href = '/Smart_Login/Login';
                } else {
                    setSessionStatus(SESSION_LOGGED_IN);
                }
            }

            window.addEventListener('storage', function (event) {
                if (event.key === SESSION_KEY && event.newValue === SESSION_LOGGED_OUT) {
                    window.location.href = '/Smart_Login/Login';
                }
            });

            window.addEventListener('load', handleTabOpen);
            window.addEventListener('beforeunload', function () {
                setSessionStatus(SESSION_LOGGED_OUT);
            });
        })();
    </script>



