    <script>
        // Get all the navigation links
        var navLinks = document.querySelectorAll('.vertical-nav-menu a');

        // Remove the 'mm-active' class from all navigation links when the page loads
        window.addEventListener('load', function () {
            navLinks.forEach(function (link) {
                link.classList.remove('mm-active');
            });
        });

        // Loop through each navigation link
        navLinks.forEach(function (link) {
            // Add a click event listener to each navigation link
            link.addEventListener('click', function (event) {
                // Remove the 'mm-active' class from all navigation links
                navLinks.forEach(function (navLink) {
                    navLink.classList.remove('mm-active');
                });

                // Add the 'mm-active' class to the clicked navigation link
                link.classList.add('mm-active');
            });
        });
    </script>



