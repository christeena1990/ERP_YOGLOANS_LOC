    }

    //validation for SRN number
    document.getElementById('txt_srnNo').addEventListener('input', function () {
        var srnNo = this.value;
        var regex = /^[A-Za-z]{2}\d{7}$/;  // Regex for 2 letters followed by 7 digits
        var errorMessage = document.getElementById('error-message');

        // Check if the value matches the regex
        if (srnNo.length >= 9) {
            if (!regex.test(srnNo)) {
